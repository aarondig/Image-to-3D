# Tripo API Configuration
TRIPO_API_BASE=https://api.tripo3d.ai/v2/openapi
TRIPO_API_KEY=your_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com

# Image Upload Limits
MAX_IMAGE_BYTES=3000000

# ⚠️ DEVELOPMENT MODE - DISABLE BEFORE DEPLOYING TO PRODUCTION ⚠️
# Set to 'true' to bypass credit limits during development
# MUST be set to 'false' or removed before production deployment
DEV_MODE_BYPASS_LIMITS=false

# Fallback Configuration
# Time in milliseconds before falling back from TripoSR to Tripo3D (default: 16000 = 16 seconds)
FALLBACK_THRESHOLD_MS=16000
# Set to 'true' to disable fallback to Tripo3D (for testing TripoSR only)
DISABLE_FALLBACK=false
